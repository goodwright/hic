{
    "inputs": [
        {
            "name": "File options",
            "description": "Files needed to build the genome.",
            "from_fileset": true,
            "fileset_requires_organism": true,
            "params": {
                "fasta": {
                    "name": "FASTA",
                    "type": "data",
                    "pattern": "^\\S+\\.fn?a(sta)?(\\.gz)?$",
                    "fileset_pattern": "fasta",
                    "required": true,
                    "description": "A raw genome FASTA file."
                },
                "dnase": {
                    "name": "DNase",
                    "type": "hidden",
                    "required": false,
                    "description": "",
                    "default": "true"
                }
            }
        }
    ],
    "outputs": [
        {
            "name": "Small RNA Bowtie index",
            "description": "A small RNA index for pre-mapping generated by Bowtie.",
            "filetype": "",
            "process": "BOWTIE2_BUILD"
        },
	{
            "name": "Chromosome size",
            "description": "Information about the size of the chromosomes in the genome.",
            "filetype": ".*\\.fasta\\.sizes$",
            "process": "CUSTOM_GETCHROMSIZES"
        }
    ]
}
